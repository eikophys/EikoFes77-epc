---
type Menu = {
  title: string;
  link: string;
};
const menu: Menu[] = [
  {
    title: "TOP",
    link: "/",
  },
  {
    title: "物理部とは",
    link: "/epc/",
  },
  {
    title: "部内科甲",
    link: "/kako/",
  },
  {
    title: "ATTO",
    link: "/atto/",
  },
  {
    title: "展示",
    link: "/display/",
  },
];

const path = Astro.url.pathname;
---

<header>
  <nav>
    <h1><a href="/">EPC</a></h1>
    <div class="menu_line"></div>
    <input id="hamburger" type="checkbox" />
    <div class="hamburger">
      <label for="hamburger">
        <span></span>
        <span></span>
        <span></span></label
      >
    </div>
    <label for="hamburger"><div class="back"></div></label>
    <menu>
      {
        menu.map((item) => (
          <div class="item">
            <a href={item.link} class={path === item.link ? "now" : null}>
              {item.title}
            </a>
          </div>
        ))
      }
    </menu>
  </nav>
</header>
<script>
  window.addEventListener("DOMContentLoaded", () => {
    const checkbox = document.getElementById("hamburger") as HTMLInputElement;
    if (checkbox) {
      checkbox.addEventListener("change", () => {
        if (checkbox.checked) {
          window.scrollTo(0, 0);
        }
      });
    }
  });
</script>
<style lang="scss">
  header {
    position: relative;
    z-index: 1;
    nav {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      width: 100%;
      h1 {
        font-size: 2rem;
        font-weight: 300;
        border-right: #29009b 2px solid;
        border-top: #29009b 2px solid;
        border-bottom: transparent 2px solid;
        padding: 0 10px;
        margin: 0;
        a {
          text-decoration: none;
          color: #29009b;
        }
      }
      .menu_line {
        width: 100%;
        border-bottom: #29009b 2px solid;
      }
      #hamburger {
        display: none;
      }

      .hamburger {
        display: none;
      }
      menu {
        padding: 0;
        margin: 0;
        display: flex;
        height: 50%;
        transform: translateY(-1.2px);

        .item {
          white-space: nowrap;
          a {
            text-decoration: none;
            color: #333;
            padding: 0 25px;
            border-bottom: #29009b 2px solid;
            transition:
              color 0.3s,
              background-color 0.3s,
              box-shadow 0.3s;
            &:hover {
              background-color: #29009b;
              color: #fff;
              box-shadow: 0 2px 10px #29009b41;
              transition:
                color 0.2s,
                background-color 0.2s,
                box-shadow 0.2s;
            }
          }
          .now {
            border: #29009b 2px solid;
            border-bottom: transparent 2px solid;
          }
        }
      }
    }
  }

  @media (max-width: 700px) {
    header {
      nav {
        .hamburger {
          display: flex;
          flex-direction: column;
          justify-content: space-around;
          width: 2rem;
          height: 2rem;
          cursor: pointer;
          border-bottom: #29009b 2px solid;
          padding-bottom: 10px;

          label {
            z-index: 2;
            span {
              display: block;

              width: 2rem;
              height: 3px;
              background: #29009b;
              margin: 0.5rem 0;
              transition:
                transform 0.3s,
                opacity 0.3s;
            }
          }
        }

        input[type="checkbox"]:checked ~ .hamburger {
          label span {
            &:first-of-type {
              transform: translateY(0.68rem) rotate(225deg);
            }
            &:nth-of-type(2) {
              transform: rotate(360deg);
              opacity: 0;
            }
            &:last-of-type {
              transform: translateY(-0.68rem) rotate(315deg);
            }
          }
        }
        label .back {
          display: none;
        }
        input[type="checkbox"]:checked ~ label .back {
          display: block;
          position: fixed;
          top: 0;
          left: 0;
          width: 100dvw;
          height: 100dvh;
          background-color: transparent;
          z-index: 0;
        }

        menu {
          display: flex;
          flex-direction: column;
          width: fit-content;
          height: 100%;
          position: fixed;
          top: 0;
          right: 0;
          padding: 20px;
          padding-top: 70px;
          background-color: #fefeff;
          border-left: #29009b 2px solid;
          transform: translateX(100%);
          transition:
            transform 0.3s ease-in-out,
            box-shadow 0.3s ease-in-out;

          .item {
            width: 100%;
            height: 2rem;
            text-align: right;
            margin-trim: 0;
            a {
              display: block;
              height: 100%;
              padding: 0 25px;
              border: none;
              border-right: #29009b 2px solid;
              &:hover {
                box-shadow: 0 2px 10px #29009b41;
              }
            }
            .now {
              border: #29009b 2px solid;
              border-right: transparent 2px solid;
              height: calc(100% - 4px);
            }
          }
        }

        input[type="checkbox"]:checked ~ menu {
          box-shadow: 0 0 50px #29009b25;
          transform: translateX(0);
        }
      }
    }
  }
</style>
<style is:global>
  body:has(input[type="checkbox"]:checked) {
    overflow-y: hidden;
  }
</style>
