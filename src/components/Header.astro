---
type Menu = {
  title: string;
  link: string;
};
const menu: Menu[] = [
  {
    title: "Top",
    link: "/",
  },
  {
    title: "About",
    link: "/about/",
  },
  {
    title: "Contact",
    link: "/contact/",
  },
];

const path = Astro.url.pathname;
---

<header>
  <nav>
    <h1>EPC</h1>
    <div class="menu_line"></div>
    <menu>
      {
        menu.map((item) => (
          <div class="item">
            <a href={item.link} class={path === item.link ? "now" : null}>
              {item.title}
            </a>
          </div>
        ))
      }
    </menu>
  </nav>
</header>
<style lang="scss">
  header {
    padding: 1rem 2rem;
    background-color: #f4f4f4;
    nav {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      width: 100%;
      h1 {
        font-size: 2rem;
        font-weight: 300;
        border-right: #29009b 2px solid;
        border-top: #29009b 2px solid;
        border-bottom: transparent 2px solid;
        padding: 0 10px;
        margin: 0;
      }
      .menu_line {
        width: 100%;
        border-bottom: #29009b 2px solid;
      }

      menu {
        padding: 0;
        margin: 0;
        display: flex;
        height: 50%;
        transform: translateY(-1.2px);

        .item {
          a {
            text-decoration: none;
            color: #333;
            padding: 0 30px;
            border-bottom: #29009b 2px solid;
            transition:
              color 0.3s,
              background-color 0.3s;
            &:hover {
              background-color: #29009b;
              color: #fff;
            }
          }
          .now {
            border: #29009b 2px solid;
            border-bottom: transparent 2px solid;
          }
        }
      }
    }
  }
</style>
