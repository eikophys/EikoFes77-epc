---
type Menu = {
  title: string;
  link: string;
};
const menu: Menu[] = [
  {
    title: "TOP",
    link: "/",
  },
  {
    title: "物理部とは",
    link: "/epc/",
  },
  {
    title: "部内科甲",
    link: "/kako/",
  },
  {
    title: "ATTO",
    link: "/atto/",
  },
  {
    title: "展示",
    link: "/display/",
  },
];

const path = Astro.url.pathname;
---

<header>
  <nav>
    <h1><a href="/">EPC</a></h1>
    <div class="menu_line"></div>
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <menu>
      {
        menu.map((item) => (
          <div class="item">
            <a href={item.link} class={path === item.link ? "now" : null}>
              {item.title}
            </a>
          </div>
        ))
      }
    </menu>
  </nav>
</header>
<style lang="scss">
  header {
    position: relative;
    z-index: 1;
    nav {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      width: 100%;
      h1 {
        font-size: 2rem;
        font-weight: 300;
        border-right: #29009b 2px solid;
        border-top: #29009b 2px solid;
        border-bottom: transparent 2px solid;
        padding: 0 10px;
        margin: 0;
        a {
          text-decoration: none;
          color: #29009b;
        }
      }
      .menu_line {
        width: 100%;
        border-bottom: #29009b 2px solid;
      }

      menu {
        padding: 0;
        margin: 0;
        display: flex;
        height: 50%;
        transform: translateY(-1.2px);

        .item {
          white-space: nowrap;
          a {
            text-decoration: none;
            color: #333;
            padding: 0 25px;
            border-bottom: #29009b 2px solid;
            transition:
              color 0.3s,
              background-color 0.3s,
              box-shadow 0.3s;
            &:hover {
              background-color: #29009b;
              color: #fff;
              box-shadow: 0 2px 10px #29009b41;
            }
          }
          .now {
            border: #29009b 2px solid;
            border-bottom: transparent 2px solid;
          }
        }
      }
    }
  }
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    cursor: pointer;

    span {
      width: 2rem;
      height: 0.2rem;
      background: #29009b;
    }
  }

  @media (max-width: 700px) {
    header {
      nav {
        .hamburger {
          display: flex;
        }

        menu {
          order: 2;
          display: flex;
          flex-direction: column;
          align-items: center;
          width: 100%;
          transform: translateX(100%);

          .item {
            width: 100%;
            text-align: center;
          }
        }
      }
    }
  }
</style>
