---
import "../styles/global.scss";
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}
const title =
  Astro.props.title === "トップ"
    ? "物理部展-第77回栄光祭"
    : Astro.props.title + " | 物理部展-第77回栄光祭";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
  </body>
  <script async src="https://platform.x.com/widgets.js" charset="utf-8"
  ></script>
  <style lang="scss">
    main {
      padding: 1rem;
      display: flex;
      justify-content: center;
      align-items: center;

      .container {
        height: 100%;
        display: flex;
        margin-inline: auto;
        justify-content: center;
        align-items: center;
      }
    }
    @media (max-width: 700px) {
      main {
        .container {
          flex-direction: column;
        }
      }
    }
  </style>
  <style is:global>
    .twitter-timeline > iframe {
      width: 100% !important;
      opacity: 0.8;
    }
    @media (max-width: 700px) {
      .twitter-timeline > iframe {
        width: 100% !important;
        height: 500px !important;
      }
    }
  </style>
</html>
<ViewTransitions />
